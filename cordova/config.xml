<?xml version='1.0' encoding='utf-8'?>
<widget id="ventures.botter.workshop.app_base" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Angular Material Template</name>
    <description>
        An Apache Cordova application based on Angular Material.
    </description>
    <author email="workshop@botter.ventures" href="http://workshop.botter.ventures">
        Botter Workshop
    </author>
    <content src="index.html" />
    <preference name="xwalkVersion" value="xwalk_core_library_beta:14.43.343.17" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
